<?php

namespace App\Http\Middleware;

use Closure;
use Illuminate\Support\Facades\Auth;

class RedirectIfNotRep
{
    public function handle($request, Closure $next, $guard = 'rep')
    {
        if (!Auth::guard($guard)->check()) {
            return redirect()->route('rep.login');
        }

        return $next($request);
    }
}